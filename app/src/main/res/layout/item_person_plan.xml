<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="10dp">

    <com.zucc.circle.summerwork.View.ListItemDelete
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/person_plan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/plan_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="298dp"
                app:srcCompat="@mipmap/icon_wechat" />

            <TextView
                android:id="@+id/person_plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/person_plan_time_start"
                android:layout_alignStart="@+id/person_plan_time_start"
                android:layout_alignTop="@+id/plan_icon"
                android:layout_marginStart="64dp"
                android:text="中午要吃饭"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/person_plan_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/plan_icon"
                android:layout_alignParentStart="true"
                android:layout_marginStart="113dp"
                android:text="2016/7/29/16:00"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/person_plan_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/person_plan_title"
                android:layout_marginEnd="24dp"
                android:text="2016/7/29/16:00"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成状态："
                android:textColor="@color/red"
                android:layout_alignParentStart="true"
                android:layout_marginStart="170dp"
                android:layout_below="@+id/person_plan_time_start" />

            <TextView
                android:id="@+id/person_plan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完成"
                android:textColor="@color/red"
                android:layout_toRightOf="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/person_plan_time_end" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_Nao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="标记完成"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btn_Into"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="进入日程" />

            <Button
                android:id="@+id/btn_Delete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </com.zucc.circle.summerwork.View.ListItemDelete>


</android.support.v7.widget.CardView>