<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zucc.circle.summerwork.Activity.AddGroupActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/fan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="#00ffffff"
                android:onClick="fan"
                android:padding="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fan" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="添加小组"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.rey.material.widget.TextView
                android:id="@+id/btn_check_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="48px">
        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小组名称"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入小组名称"
            android:textSize="24sp"
            android:layout_alignBaseline="@+id/group_name"
            android:layout_alignBottom="@+id/group_name"
            android:layout_toEndOf="@+id/group_name"
            android:layout_marginStart="50dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#9a9a9a" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="48px">
        <TextView
            android:id="@+id/group_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加小组成员   (最多4人)"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="48px"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_member_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="输入要邀请人的手机号" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/et_member_name"
            android:src="@drawable/ic_add_circle" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="24px"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_member_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="输入要邀请人的手机号" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/et_member_name"
            android:src="@drawable/ic_add_circle" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="24px"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_member_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="输入要邀请人的手机号" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/et_member_name"
            android:src="@drawable/ic_add_circle" />
    </RelativeLayout>
</LinearLayout>
