<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/returnActivity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="9dp"
                android:onClick="fan"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:src="@drawable/fan" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="任务详情"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <com.rey.material.widget.TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/person_plan_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="项目名称"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#9a9a9a" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <com.rey.material.widget.TextView
                    android:id="@+id/is_et_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/person_plan_start"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="项目名称"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#9a9a9a" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <com.rey.material.widget.TextView
                    android:id="@+id/is_et_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/person_plan_end"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="项目名称"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#9a9a9a" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical">

                <com.rey.material.widget.TextView
                    android:id="@+id/is_et_plantype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完成状态"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/person_plan_type"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="项目名称"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#9a9a9a" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp">

                <com.rey.material.widget.TextView
                    android:id="@+id/is_et_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/person_plan_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="项目名称XXXXXXXXXXXXXXXXXXXXX"
                    android:textSize="20sp"
                    android:layout_below="@+id/is_et_remark"/>
            </RelativeLayout>

            <Button
                android:id="@+id/action_plan_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:background="?attr/colorPrimary"
                android:textColor="#FFFFFF"
                android:text="查看日志"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
